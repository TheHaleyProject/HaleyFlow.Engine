{
  "definition": {
    "name": "VendorPreqStates",
    "version": 3,
    "description": "Lifecycle definition for vendor form submission, clarification handling, and final tier approval process."
  },
  "states": [
    { "name": "FormSubmitted", "is_initial": true, "category": "system" },
    { "name": "WorkflowSelection", "category": "system" },
    { "name": "UnderEvaluation", "category": "business", "timeout": "P7D", "timeout_event": 1002 },
    { "name": "Overdue", "category": "system", "timeout": "P1D", "timeout_event": 1003, "timeout_mode": "repeat" },
    { "name": "PendingClarification", "category": "business", "timeout": "P2D", "timeout_event": 1006 },
    { "name": "ClarificationReview", "category": "business" },
    { "name": "ReturnedToVendor", "category": "business" },
    { "name": "ClarificationReviewed", "category": "business" },
    { "name": "WorkItemsReview", "category": "technical", "timeout": "P2D" },
    { "name": "CompanyTierCalculation", "category": "system" },
    { "name": "TierValidation", "category": "business", "timeout": "P2D" },
    { "name": "CompanyTierChanged", "category": "system" },
    { "name": "Completed", "is_final": true, "category": "system" }
  ],
  "events": [
    { "code": 1000, "name": "SelectWorkFlow" },
    { "code": 1001, "name": "AssignEvaluator" },
    { "code": 1002, "name": "EvaluationTimeout" },
    { "code": 1003, "name": "OverdueReminder" },
    { "code": 1004, "name": "EvaluationResumed" },
    { "code": 1005, "name": "ClarificationsRequested" },
    { "code": 1006, "name": "EscalateToSuperUser" },
    { "code": 1007, "name": "ClarificationsValidated" },
    { "code": 1008, "name": "VendorResubmitted" },
    { "code": 1009, "name": "ClarificationsInvalid" },
    { "code": 1010, "name": "IsTechnicalSubmission" },
    { "code": 1011, "name": "IsNonTechnicalSubmission" },
    { "code": 1012, "name": "EvaluationCompleted" },
    { "code": 1013, "name": "TechnicalReviewCompleted" },
    { "code": 1014, "name": "TierChanged" },
    { "code": 1015, "name": "TierUnchanged" },
    { "code": 1016, "name": "Validated" },
    { "code": 1017, "name": "TierAdjusted" },
    { "code": 1018, "name": "Acknowledged" }
  ],
  "transitions": [
    { "event": 1000, "from": "FormSubmitted", "to": "WorkflowSelection" },
    { "event": 1001, "from": "WorkflowSelection", "to": "UnderEvaluation" },
    { "event": 1002, "from": "UnderEvaluation", "to": "Overdue" },
    { "event": 1004, "from": "Overdue", "to": "UnderEvaluation" },
    { "event": 1003, "from": "Overdue", "to": "Overdue" },
    { "event": 1005, "from": "UnderEvaluation", "to": "PendingClarification" },
    { "event": 1006, "from": "PendingClarification", "to": "ClarificationReview" },
    { "event": 1007, "from": "ClarificationReview", "to": "ReturnedToVendor" },
    { "event": 1008, "from": "ReturnedToVendor", "to": "UnderEvaluation" },
    { "event": 1009, "from": "ClarificationReview", "to": "ClarificationReviewed" },
    { "event": 1010, "from": "ClarificationReviewed", "to": "WorkItemsReview" },
    { "event": 1011, "from": "ClarificationReviewed", "to": "CompanyTierCalculation" },
    { "event": 1012, "from": "UnderEvaluation", "to": "ClarificationReviewed" },
    { "event": 1013, "from": "WorkItemsReview", "to": "CompanyTierCalculation" },
    { "event": 1014, "from": "CompanyTierCalculation", "to": "TierValidation" },
    { "event": 1015, "from": "CompanyTierCalculation", "to": "Completed" },
    { "event": 1016, "from": "TierValidation", "to": "Completed" },
    { "event": 1017, "from": "TierValidation", "to": "CompanyTierChanged" },
    { "event": 1018, "from": "CompanyTierChanged", "to": "Completed" }
  ]
}
