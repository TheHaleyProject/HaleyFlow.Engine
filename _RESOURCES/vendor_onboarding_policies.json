{
  "policy_name": "vendoronboarding.policy",
  "for": { "definition": "vendoronboarding", "version": 1 },
  "params": [
    { "code": "PARAMS.ONBOARD.PWD.LINK", "data": { "link": { "fresh": true, "ttl": "P2D" } } }
  ],
  "rules": [
    { "state": "AwaitPasswordCreation", "via": 1000, "params": ["PARAMS.ONBOARD.PWD.LINK"], "emit": [ { "event": "APP.ONBOARD.PASSWORD.LINK.SEND" } ] },
    { "state": "AwaitPasswordCreation", "via": 1002, "params": ["PARAMS.ONBOARD.PWD.LINK"], "emit": [ { "event": "APP.ONBOARD.PASSWORD.LINK.REMIND" } ] }
  ]
}
